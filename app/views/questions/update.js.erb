<% if flash[:alert] %>
  <% flash.each do |key, value| %>
    $('.msg-alert').delay(1000).html("<%= value %>")
  <% end %>
<% end %>

$('.question-errors').html('<%= render 'shared/errors', resource: @question %>');

<% if !@question.errors.present? %>
  $(".questions #question-<%= @question.id %>").html('<%= j render @question %>');
<% end %>