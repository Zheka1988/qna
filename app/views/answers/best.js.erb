<% if flash[:alert] %>
  <% flash.each do |key, value| %>
    $('.msg-alert').delay(1000).html("<%= value %>")
  <% end %>
<% end %>

var parentElement = document.getElementById('answers');
var first_answer = parentElement.firstChild;
var best_answer = document.getElementById("answer-<%= @answer.id%>");
parentElement.insertBefore(best_answer, first_answer);
